{
  "$schema": "https://claude.ai/schema/claude-config.json",
  "version": "2.0",
  "description": "Global Claude Code configuration for ~/.claude/.claude.json",
  "globalSettings": {
    "model": "sonnet",
    "agentDelegationEnabled": true,
    "strictEnforcement": true,
    "costOptimization": true
  },
  
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem", "/home/$USER"],
      "description": "Global filesystem access for all projects"
    },
    "github": {
      "command": "npx", 
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Global GitHub integration"
    },
    "context7": {
      "command": "npx",
      "args": ["@context7/mcp-server"],
      "description": "Framework documentation and best practices"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["@sequential-thinking/mcp-server"],
      "description": "Complex problem solving and analysis"
    }
  },
  
  "globalToolPermissions": {
    "task": {
      "allowed": true,
      "required": true,
      "description": "Essential for agent delegation system"
    },
    "todowrite": {
      "allowed": true,
      "autoUse": "for_complex_tasks"
    },
    "bash": {
      "allowed": true,
      "restrictions": [
        "git operations should use git-helper agent",
        "destructive operations require confirmation"
      ]
    },
    "read": {
      "allowed": true
    },
    "write": {
      "allowed": false,
      "reason": "Use specialized agents for file modifications"
    },
    "edit": {
      "allowed": false, 
      "reason": "Use specialized agents for code editing"
    }
  },
  
  "globalBehaviors": {
    "responseStyle": {
      "maxLines": 4,
      "concise": true,
      "directAnswers": true,
      "noPreamble": true
    },
    "proactiveness": {
      "agentActivation": "automatic",
      "patternDetection": "strict",
      "todoManagement": "proactive"
    },
    "safety": {
      "branchProtection": "mandatory",
      "contextVerification": "always",
      "userConfirmation": "for_destructive_actions"
    }
  },
  
  "globalCommands": {
    "security": {
      "prompt": "Review this code for security vulnerabilities:",
      "agent": "security-engineer",
      "autoInvoke": true
    },
    "optimize": {
      "prompt": "Analyze this code for performance optimization:",
      "agent": "performance-engineer", 
      "autoInvoke": true
    },
    "test": {
      "prompt": "Create comprehensive tests for this code:",
      "agent": "qa-engineer",
      "autoInvoke": true
    },
    "document": {
      "prompt": "Create documentation for this API/feature:",
      "agent": "technical-writer",
      "autoInvoke": true
    }
  },
  
  "costManagement": {
    "budgetAlerts": {
      "dailyLimit": 100.0,
      "sessionLimit": 25.0,
      "tierWarnings": true
    },
    "optimization": {
      "tierSelection": "automatic",
      "escalationTracking": true,
      "costReporting": "session_summary"
    }
  },
  
  "monitoring": {
    "trackMetrics": [
      "agent_delegation_rate",
      "cost_per_session", 
      "escalation_frequency",
      "quality_metrics",
      "user_satisfaction"
    ],
    "reportingInterval": "daily",
    "alertThresholds": {
      "delegation_compliance": 0.95,
      "cost_efficiency": 0.85,
      "error_rate": 0.05
    }
  }
}